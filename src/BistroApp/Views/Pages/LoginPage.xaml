<Page x:Class="SystemePAC.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:util="clr-namespace:SystemePAC.Help.Language"
      Background="{DynamicResource MaterialDesignPaper}"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      >
    <Grid>
        <Image Source="pack://application:,,,/Resources/accessControlLogin.png" Width="200" Height="200"/>
        <Label Content="{util:Localization Login}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" Foreground="DarkSlateGray"  Margin="0,250,0,0"/>
    </Grid>
</Page>
